{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "interface-name": false,
    "no-console": false,
    "jsx-no-lambda": false,
    "typedef": [true, "arrow-call-signature"],
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}
